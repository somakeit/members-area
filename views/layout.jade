doctype 5
html
  head
    title= title
      |  | So Make It Members
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/bootstrap-responsive.min.css')
    link(rel='stylesheet', href='/css/style.css')
    link(href="/img/favicon.png", rel="shortcut icon")
    script(src='/js/jquery.min.js')
    script(src='/js/jquery-migrate.min.js')
    script(src='/js/bootstrap.min.js')
  body
    .navbar.navbar-inverse.navbar-static-top
      .navbar-inner
        .container
          // Responsive Navbar Part 1: Button for triggering responsive navbar (not covered in tutorial). Include responsive CSS to utilize.
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='/') So Make It
          // Responsive Navbar Part 2: Place all navbar contents you want collapsed withing .navbar-collapse.collapse.
          .nav-collapse.collapse
            - var active
            ul(class="nav members")
              li
                a(href='http://www.somakeit.org.uk/') Home
              li
                a(href='http://www.somakeit.org.uk/trustees/') Trustees
              li
                a(href='http://www.somakeit.org.uk/groups/') Groups
              li
                a(href='http://www.somakeit.org.uk/contact/') Contact/Visit
              li
                a(href='http://wiki.somakeit.org.uk/') Wiki
            ul.nav.pull-right
              li.active
                a(href='#{process.env.SERVER_ADDRESS}/') Members area
    #main.container
      block body
        if userId
          .row
            .span3
              ul.nav.nav-list
                li.nav-header #{fullname}

                -templates = ['dashboard']
                li(class=(templates.indexOf(templateName) != -1 ?  'active' : ''))
                  a(href="/") Dashboard

                -templates = ['account']
                li(class=(templates.indexOf(templateName) != -1 ?  'active' : ''))
                  a(href="/account") Account

                -templates = ['subscription']
                li(class=(templates.indexOf(templateName) != -1 ?  'active' : ''))
                  a(href="/subscription") Subscription

                -templates = ['users', 'user']
                li(class=(templates.indexOf(templateName) != -1 ?  'active' : ''))
                  a(href="/user") Member list

                if admin
                  li.nav-header Administration
                    -templates = ['admin']
                    li(class=(templates.indexOf(templateName) != -1 ?  'active' : ''))
                      a(href="/admin") Owt yet

            .span9.main
              block content
        else
          .row
            .span12
              block content

    if false
      li.nav-header Not logged in

      -templates = ['login']
      li(class=(templates.indexOf(templateName) != -1 ?  'active' : ''))
        a(href="/") Log in

      -templates = ['register','registrationComplete']
      li(class=(templates.indexOf(templateName) != -1 ?  'active' : ''))
        a(href="/register") Register

      -templates = ['forgot']
      li(class=(templates.indexOf(templateName) != -1 ?  'active' : ''))
        a(href="/forgot") Forgot password

    .container
      footer
        block footer
          p.pull-right
            a(href='#') Back to top
          p
            | &copy; #{ new Date().getFullYear() } So Make It - in the process of applying to be a non-profit Company limited by guarantee
